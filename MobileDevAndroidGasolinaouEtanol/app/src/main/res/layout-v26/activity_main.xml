<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="2">

    <TextView
        android:id="@+id/preco_gasolina_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/padding_do_textview"
        android:paddingTop="@dimen/padding_do_textview"
        android:text="@string/preco_gasolina"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <SeekBar
        android:id="@+id/preco_gasolina_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="5"
        android:paddingBottom="@dimen/padding_do_seekbar"
        android:paddingTop="@dimen/padding_do_seekbar"
        android:progress="300"
        android:max="600"

        />

    <TextView

        android:id="@+id/preco_etanol_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/padding_do_textview"
        android:paddingBottom="@dimen/padding_do_textview"
        android:text="@string/preco_etanol"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <SeekBar
        android:id="@+id/preco_etanol_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="5"
        android:paddingBottom="@dimen/padding_do_seekbar"
        android:paddingTop="@dimen/padding_do_seekbar"
        android:progress="300"
        android:max="600"
        />

    <ImageView
        android:id="@+id/melhor_combustivel_imageview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/melhor_combustivel_imageview"
        app:srcCompat="@drawable/etanol1" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/melhor_combustivel_wrapper"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:hint="@string/better_use"
        >

        <EditText
            android:id="@+id/combustivel"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="none"
            android:textAlignment="center"
            android:importantForAutofill="no" />


    </android.support.design.widget.TextInputLayout>


</GridLayout>

